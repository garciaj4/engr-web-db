<!doctype html>
<h1> On this page you can add or edit a component</h1>

<fieldset>
<legend > Add a Component: </legend>
<form class="form-horizontal" id= "add-component-form" action="component-insert" method="GET">
  
  <div class="form-group">
    <label for="cpartNumber" class="col-sm-2 control-label">Part Number</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="cpartNumber" name="cpartNumber" placeholder="Part Number">
    </div>
  </div>

  <div class="form-group">
    <label for="ctype" class="col-sm-2 control-label">Type</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="ctype" name="ctype" placeholder="Cable, Switch, Light etc">
    </div>
  </div>

  <div class="form-group">
    <label for="mid" class="col-sm-2 control-label">Manufacturer</label>
    <div class="col-sm-10">
      <select name="mid">
        {{#each dropdown}}
          <option value='{{Manufacturer_id}}'>{{Manufacturer_name}}</option>
        {{/each}}
    </select>
    </div>
  </div>

   <div class="form-group">
    <label for="cstock" class="col-sm-2 control-label">Stock</label>
    <div class="col-sm-2">
      <input type="number" class="form-control" id="cstock" name="cstock" placeholder="Amount in Stock">
    </div>
  </div>

  <div class="form-group">
    <label for="ccost" class="col-sm-2 control-label">Cost</label>
    <div class="col-sm-2">
      <input type="number" class="form-control" id="ccost" name="ccost" placeholder="Component cost">
    </div>
  </div>

 <div class="form-group">
    <label for="cleadTime" class="col-sm-2 control-label">Lead Time</label>
    <div class="col-sm-2">
      <input type="number" class="form-control" id="cleadTime" name="cleadTime" placeholder="Lead time in weeks">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default"> Add Component </button>
    </div>
  </div>
</form>
</fieldset>


