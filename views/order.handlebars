<form>
    <fieldset>
      <legend>Search or modify the products within an order:</legend>
      
    </fieldset>
</form>

<h2> Here are the Products associated with each Order. </h2>
<table id="order_table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Date Placed</th>
            <th>Date Fulfilled</th>
            <th>Order Status</th>
            <th>Prodcut Name</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody id="order_table_body">
        {{#order}}
        <tr>
            <td id="order{{this.Order_id}}_id">{{this.Order_id}}</td>
            <td id="product{{this.Product_id}}_id" style="display:none;">{{this.Product_id}}</td>
            <td> <input id="order{{this.Order_id}}_cName" value="{{this.Customer_name}}"></td>
            <td> <input id="order{{this.Order_id}}_pDate" value="{{this.Order_dateCreated}}"> </td>
            <td> <input id="order{{this.Order_id}}_fDate" value="{{this.Order_dateFulfilled}}"> </td>
            <td> <input id="order{{this.Order_id}}_oStatus" value="{{this.Order_status}}"> </td>
            <td> <input id="order{{this.Order_id}}_pName" value="{{this.Product_name}}"> </td>
            <td> <input id="order{{this.Order_id}}_pQty" value="{{this.Product_quantity}}"> </td>
            <td id="order{{this.Order_id}}_delete">
              <a href="javascript:deleteOrder({{this.Order_id}}, {{this.Product_id}});">
              Delete</a></td>
            <td id="order{{this.Order_id}}_edit">
              <a href="javascript:updateOrder(order{{this.Order_id}});">
              Update</a>
            </td>
        </tr>
        {{/order}}
    </tbody>
</table>
